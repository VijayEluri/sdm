<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<name>Stamdata Project</name>

	<groupId>dk.nsi.stamdata</groupId>
	<artifactId>stamdata-root</artifactId>
	<packaging>pom</packaging>
	<version>3.0-SNAPSHOT</version>

	<modules>
		<module>performance-tests</module>
		<module>dodi/importer</module>
		<module>dodi/shared</module>
		<module>nsp/replication</module>
		<module>nsp/authorization-ws</module>
		<!-- <module>nsp/cpr-ws</module> -->
	</modules>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<echo>Output dir: ${project.build.directory}</echo>
								<mkdir dir="${project.build.directory}/dist/documentation" />
								<copy todir="${project.build.directory}/dist" flatten="true"
									failonerror="false">
									<fileset dir="${basedir}" includes="**/*.war" />
								</copy>
								<copy todir="${project.build.directory}/dist/documentation"
									flatten="true" failonerror="false">
									<fileset dir="${basedir}" includes="**/*.doc,**/*.pdf" />
								</copy>
								<zip destfile="${project.build.directory}/${project.build.finalName}.zip">
									<fileset dir="${project.build.directory}/dist" />
								</zip>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.5</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<artifact>
									<file>${project.build.directory}/${project.build.finalName}.zip</file>
									<type>zip</type>
								</artifact>
							</artifacts>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<!-- REPOSITORIES -->

	<repositories>
		<repository>
			<id>trifork</id>
			<name>Trifork new releases</name>
			<layout>default</layout>
			<url>https://nexus.trifork.com/content/groups/public</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>Trifork-Nexus-Public-Repository</id>
			<name>Trifork Nexus Public Repository</name>
			<url>https://nexus.trifork.com/content/groups/public</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>
</project>

</project>
